<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MusicPlayer.WPF.Styles"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <!-- Fonts -->
    <system:Double x:Key="ButtonsFontSize">32</system:Double>
    <system:Double x:Key="VolumeFontSize">28</system:Double>
    <system:Double x:Key="SongInfoFontSize">20</system:Double>
    <system:Double x:Key="TrackValueFontSize">14</system:Double>
    <system:Double x:Key="ArtistTagLabelFontSize">14</system:Double>
    <system:Double x:Key="TitleTagLabelFontSize">18</system:Double>
    <system:Double x:Key="AlbumTagLabelFontSize">12</system:Double>

    <!-- Margins -->
    <Thickness x:Key="SongInfoMargin" Left="4" Top="4" Right="4" Bottom="4"/>
    <Thickness x:Key="TrackLabelMargin" Left="4" Top="0" Right="4" Bottom="0"/>
    <Thickness x:Key="MusicSliderMargin" Left="2" Top="12" Right="10" Bottom="12"/>
    <Thickness x:Key="VolumeSliderMargin" Left="10" Top="5" Right="10" Bottom="5"/>
    <Thickness x:Key="TagLabelMargin" Left="8" Top="3" Right="5" Bottom="3"/>

    <system:Double x:Key="TrackCoverImageSize">80</system:Double>
</ResourceDictionary>