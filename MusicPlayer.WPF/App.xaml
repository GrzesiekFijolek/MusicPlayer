<Application x:Class="MusicPlayer.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MusicPlayer.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Values.xaml"/>
                <ResourceDictionary Source="Styles/Storyboards.xaml"/>
                <ResourceDictionary Source="Styles/Others.xaml"/>
                <ResourceDictionary Source="Styles/Sliders.xaml"/>
                <ResourceDictionary Source="Styles/Labels.xaml"/>
                <ResourceDictionary Source="Styles/ListViewItems.xaml"/>
                <ResourceDictionary Source="Styles/GridViewColumnHeaders.xaml"/>
                <ResourceDictionary Source="Styles/Scrollbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
